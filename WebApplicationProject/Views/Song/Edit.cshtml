@model WebApplicationProject.ViewModels.CreateSongViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h2>Song</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Song.SongID" />
            <div class="form-group">
                <label asp-for="Song.Title" class="control-label"></label>
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.TrackNumber" class="control-label"></label>
                <input asp-for="Song.TrackNumber" class="form-control" />
                <span asp-validation-for="Song.TrackNumber" class="text-danger"></span>
            </div>
        <div class="form-group">
            <input type="submit" value="Save" asp-route-albumID="@Model.AlbumID" class="btn btn-dark" />
            <a class="btn btn-dark" asp-action="Details" asp-controller="Album" asp-route-id="@Model.AlbumID">Back to Album</a>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
