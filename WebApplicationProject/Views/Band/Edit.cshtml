@model WebApplicationProject.Models.Band

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h2>Band</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BandID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background" class="control-label"></label>
                <textarea asp-for="Background" TextMode="Multiline" rows="8" class="form-control"></textarea>
                <span asp-validation-for="Background" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />
                <a class="btn btn-dark" asp-action="Details" asp-controller="Band" asp-route-id="@Model.BandID">Back to Band</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
