@model WebApplicationProject.Models.Album
@*@{
        ViewData["Title"] = "Details";
    }*@

@*<h1>Details</h1>*@

<div>
    @*<h2>Album</h2>
        <hr />*@
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            <h1>@Html.DisplayFor(model => model.Band.Name)</h1>
        </div>
        <div class="col-4"></div>
    </div>

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            <h2>@Html.DisplayFor(model => model.Title)</h2>
        </div>
        <div class="col-4"></div>
    </div>

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            @*@Html.DisplayFor(model => model.ReleaseDate)*@
        </div>
        <div class="col-4"></div>
    </div>

    <div class="row">
        <div class="col-4">
            <h3>Track List</h3>
            @if (Model.Songs.Count > 0)
            {
                <table>
                    @foreach (var item in Model.Songs)
                    {
                        <tr>
                            <td>@item.TrackNumber. @item.Title</td>
                            <td class="pl-3"><a asp-action="Edit" asp-route-id="@item.SongID" asp-controller="Song">Edit</a> |</td>
                            <td><a asp-action="Delete" asp-route-id="@item.SongID" asp-controller="Song">Delete</a></td>
                        </tr>
                        <tr>
                            @*<td>playtime: @item.TrackLength</td>*@
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Nog geen tracks toegevoegd voor dit album</p>
            }


            @*<input class="btn btn-primary" type="button" value="Add Track" onclick="location.href='@Url.Action("Create", "Song", new { id = Model.AlbumID })'" />*@
        </div>



        <div class="col-4 text-center">
            <img src="~/images/@Model.CoverArt"
                 height="300" width="300" />
            <p class="m-2">@Html.DisplayFor(model => model.ReleaseDate)</p>
        </div>

        <div class="col-4 text-right">
            <h3>Band Members</h3>
            @if (Model.Band.BandArtists.Count > 0)
            {
                <ul class="list-unstyled">
                    @foreach (var item in Model.Band.BandArtists)
                    {
                        <li>
                            @item.Role.Name:
                            @item.Artist.FirstName
                            @item.Artist.LastName
                            @*<td><a asp-action="Edit" asp-route-id="@item.ArtistID" asp-controller="BandArtist">Edit</a> |</td>
                                <td><a asp-action="Delete" asp-route-id="@item.ArtistID" asp-controller="BandArtist">Delete</a></td>*@
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>Nog geen leden toegevoegd</p>
            }

            @*<input type="button" value="Add Member" onclick="location.href='@Url.Action("Create", "BandArtist", new { id = Model.BandID })'" />*@

            <h3 class="mt-3">Producer</h3>
            @if (Model.Producer != null)
            {
                <p>@Html.DisplayFor(model => model.Producer)</p>
            }
            else
            {
                <p>Geen producer toegevoegd</p>
            }

            <h3>Label</h3>
            @if (Model.MusicLabel != null)
            {
                <p>@Html.DisplayFor(model => model.MusicLabel)</p>
            }
            else
            {
                <p>Geen label toegevoegd</p>
            }

            <h3>Genre</h3>
            @if (Model.GenreID > 0)
            {
                <p>@Html.DisplayFor(model => model.Genre.Name)</p>
            }
            else
            {
                <p>Geen Genre toegevoegd</p>
            }


        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <a class="btn btn-primary mt-3 mb-3" asp-action="Create" asp-route-id="@Model.AlbumID" asp-controller="Song">Add Track</a>
        </div>
        <div class="col-4">

        </div>
        <div class="col-4 text-right">
            @if (this.User.Identity.IsAuthenticated)
            {
                <a class="btn btn-primary mt-3 mb-3" asp-action="Edit" asp-route-id="@Model.AlbumID">Edit Album</a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h3>Reviews</h3>
            @if (Model.Reviews.Count > 0)
            {
                <table>
                    @foreach (var item in Model.Reviews)
                    {
                        <tr>
                            <td class="pt-3">@item.Text</td>
                        </tr>
                        <tr>
                            <td class="pt-2">
                                <a asp-action="Edit" asp-route-id="@item.ReviewID" asp-route-albumID="@item.Album.AlbumID" asp-controller="Review">Edit</a>
                                <a class="ml-3" asp-action="Delete" asp-route-id="@item.ReviewID" asp-controller="Review">Delete</a>
                            </td>
                            <td class="pt-2 text-right">@item.Gebruiker.UserName</td>
                            <td class="pl-3 pt-2">@item.ReviewRating</td>
                        </tr>
                        @*<tr>
                            <td class="pb-4">
                                <a asp-action="Edit" asp-route-id="@item.ReviewID" asp-route-albumID="@item.Album.AlbumID" asp-controller="Review">Edit</a>
                                <a class="ml-3" asp-action="Delete" asp-route-id="@item.ReviewID" asp-controller="Review">Delete</a>
                            </td>
                        </tr>*@
                    }
                </table>
            }
            else
            {
                <p>Nog geen reviews toegevoegd</p>
            }
            <a class="btn btn-primary mt-3" asp-action="Create" asp-route-id="@Model.AlbumID" asp-controller="Review">Add Review</a>
        </div>
    </div>

</div>
<div>
    @*<input type="button" value="Create" onclick="location.href='@Url.Action("Create", "Song", new { id = Model.AlbumID })'" /> |*@
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.AlbumID">Delete |</a>
    }
    @*<a asp-action="Index" asp-controller="Home">Back to List</a> |*@
    <a href="#">
        <span class="glyphicon glyphicon-trash" aria-hidden="false"></span>
    </a>
</div>
